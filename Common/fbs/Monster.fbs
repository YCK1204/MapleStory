include "Creature.fbs";
include "Move.fbs";

enum MonsterState : uint8 {
	Move,
	Stand,
	Hit,
	Attack,
	Die,
	Trace
}

table MonsterInfoDetail {
	type:uint8;
	position:Position;
	base_info:MonsterInfo;
}

table MonsterInfo {
	id:uint64;
	dest_x:float;
	state:MonsterState;
}

table SC_MonsterInfos {
	monster_infos:[MonsterInfoDetail];
}